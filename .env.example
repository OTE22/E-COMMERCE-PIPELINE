# =============================================================================
# Environment Configuration
# Copy this file to .env and customize for your environment
# =============================================================================

# Application
APP_NAME=ecommerce-analytics
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce_analytics
POSTGRES_USER=ecommerce
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Kafka Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=ecommerce-analytics
KAFKA_TOPICS_ORDERS=orders
KAFKA_TOPICS_CLICKSTREAM=clickstream
KAFKA_TOPICS_EVENTS=events

# Data Lake Storage
DATA_LAKE_PATH=./data
DATA_RAW_PATH=${DATA_LAKE_PATH}/raw
DATA_STAGING_PATH=${DATA_LAKE_PATH}/staging
DATA_CURATED_PATH=${DATA_LAKE_PATH}/curated

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=ecommerce-analytics-data

# Prefect Orchestration
PREFECT_API_URL=http://localhost:4200/api
PREFECT_UI_URL=http://localhost:4200

# Superset Analytics
SUPERSET_HOST=localhost
SUPERSET_PORT=8088
SUPERSET_SECRET_KEY=superset-secret-key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Security
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=32-byte-encryption-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Data Quality
GREAT_EXPECTATIONS_CONFIG_DIR=./great_expectations
ENABLE_DATA_QUALITY_CHECKS=true

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_ALERT_THRESHOLD=3.0
ANOMALY_ALERT_EMAIL=alerts@example.com

# External APIs
MARKETING_API_URL=https://api.marketing-platform.com
MARKETING_API_KEY=
PAYMENT_API_URL=https://api.payment-gateway.com
PAYMENT_API_KEY=
